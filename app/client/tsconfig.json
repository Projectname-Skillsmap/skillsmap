{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["src/utils/*"],
      "@changes/*": ["src/changes/*"],
      "@components/*": ["src/components/*"],
      "@widgets/*": ["src/widgets/*"],
      "@styles/*": ["styles/*"],
      "@redux/*": ["src/redux/*"],
      "@src/*": ["src/*"]
    }
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
